/* 拼团 */
.group {
  overflow: hidden;
}
.group-title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.block-title {
  display: inline-flex;
  align-items: center;
}
.block-title::before {
  display: inline-block;
  content: '';
  width: 8rpx;
  height: 30rpx;
  margin-right: 10rpx;
  background: #fbdb1c;
  border-radius: 10rpx;
}
.group-goods {
  padding: 20rpx 0 20rpx 20rpx;
  white-space: nowrap;
}
.group-item {
  display: inline-block;
  width: 150rpx;
  padding-right: 20rpx;
}
.group-image {
  width: 100%;
  height: 150rpx;
}

/* 楼层 */
.floor-title {
  padding: 20rpx;
}
.goods-container {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 10rpx 10rpx 20rpx;
}
.floor .goods-image{
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx 8rpx 0 0;
}
.floor-image {
  padding: 0 20rpx;
  height: 250rpx;
}
.floor-image image {
  width: 100%;
  height: 100%;
}
.goods-item {
  width: calc(50% - 20rpx);
  box-sizing: border-box;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  border: 2rpx solid #F5F5F5;
  border-radius: 8rpx;
}
.goods-item--threeColumns {
  width: calc(33.33% - 20rpx);
}
.goods-item--threeColumns .goods-image {
  height: 200rpx;
}