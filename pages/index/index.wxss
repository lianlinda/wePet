/**index.wxss**/
.m-index {
  height: 100%;
}
.top-container {
  background: #fff;
}
.search-input {
  width: 90%;
  height: 50rpx;
  display: flex;
  align-items: center;
  margin: 0 auto 10rpx;
  border: 1px solid #f5f5f5;
  border-radius: 5px;
  padding: 10rpx;
  font-size: small;
}
.search-icon {
  height: 35rpx;
  width: 35rpx;
  margin-right: 10rpx;
}
.banner-image{
  width: 100%;
  height: 100%;
}
.single-image {
  width: 100%;
  margin-top: 20rpx;
}
.group-title {
  padding: 10rpx;
}
.group-goods{
  display: flex;
  padding: 10rpx;
}
.group-item {
  text-align: center;
  padding-right: 10rpx;
}
.group-image {
  width: 200rpx;
  height: 200rpx;
}

.goods-container {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}
.floor .goods-image{
  width: 200rpx;
  height: 200rpx;
}
.goods-item {
  width: 50%;
  text-align: center;
  background: #fff;
}
.floor-title{
  padding: 10rpx;
  background: #fff;
  text-align: center;
}