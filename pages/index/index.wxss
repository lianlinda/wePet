.p-index {
  height: 100%;
}
.p-index .round {
  border-radius: 16rpx;
}
.p-index .text-gray {
  color: #6d7278;
}

.top .van-search {
  padding: 20rpx;
}
.top__banner {
  padding: 0 20rpx 20rpx;
  height: 200rpx;
  border-radius: 16rpx;
}
.top__banner swiper-item {
  border-radius: 16rpx;
}
.top__banner .banner-image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
