<!--pages/goodsDetail/goodsDetail.wxml-->
<scroll-view class='m-goods-detail' scroll-y scroll-into-view="{{toView}}" scroll-with-animation>
  <!--页面滚动时才出现，滚动到顶部消失-->
  <view wx:if="{{showTopTab}}" class='top-tap' bindtap="clickToView">
    <view data-id="goods" class="{{toView === 'goods' ? 'active-tab' : ''}}">商品</view>
    <view data-id="comment" class="{{toView === 'comment' ? 'active-tab' : ''}}">评价</view>
    <view data-id="detail" class="{{toView === 'detail' ? 'active-tab' : ''}}">详情</view>
  </view>
  <swiper indicator-dots id="goods">
    <swiper-item wx:for="{{goodsInfo.mainImage}}" wx:key="id">
        <image src='{{item.url}}' class='banner-image'></image>
      </swiper-item>
  </swiper>
  <view class='container'>
    <view class='text-red'>¥{{goodsInfo.goodsPrice}}</view>
    <view>{{goodsInfo.goodsName}}</view>
  </view>
  <!--选择规格按钮-->
  <view class='container mt-20' bindtap='showSelect'>
    选择
  </view>
  <!--评价区域-->
  <view class='container mt-20' id="comment">
    <view class='comment-title'>
      <text>宝贝评价（{{commentInfo.num}}）</text>
      <text class='fr text-red'>查看全部></text>
    </view>
    <view wx:if="{{commentInfo.num > 0}}">
      <view class='comment-user'></view>
      <view class='comment-content'>{{commentInfo.commentList[0].content}}</view>
    </view>
    <view wx:else>
      暂无评价
    </view>
  </view>
  <!--店铺信息-->
  <view class='container mt-20'>
    <view>
      <image src='../../images/tab/index.png' class='bottom-icon'></image>
      <text>{{shopInfo.shopName}}</text>
    </view>
  </view>
  <!--店铺推荐-->
  <view class='container mt-20'>
    <text>店铺推荐</text>
    <view class='recommend-goods-container'>
      <view class='recommend-item' wx:for="{{recommendList}}" wx:key="goodsId" bindtap='goGoodsDetail' data-goods-id="{{item.goodsId}}">
        <image class='recommend-image' src="{{item.goosImage}}"></image>
        <view class='text-red text-center'>¥{{item.goodsPrice}}</view>
        <view class='two-line-text'>{{item.goodsName}}</view>
      </view>
    </view>
  </view>
  <!--商品详情-->
  <view class='detail-container mt-20' id="detail">
    <text>商品详情</text>
    <image wx:for="{{detailImages}}" src="{{item.url}}" wx:key="id" class='goods-detail-image'></image>
  </view>
  <!--底部按钮区域-->
  <view class='bottom-zone'>
    <view class='bottom-left'>
      <image src="../../images/tab/select-index.png" class='bottom-icon'></image>
      <view>店铺</view>
    </view>
    <view class='bottom-left'>
      <image src="../../images/goodsDetail/service.png" class='bottom-icon'></image>
      <view>客服</view>
    </view>
    <view class='bottom-left'>
      <image src="../../images/goodsDetail/unfavorite.png" class='bottom-icon'></image>
      <view>收藏</view>
    </view>
    <button class="btn-pink bottom-btn">加入购物袋</button>
    <button class="btn bottom-btn">立即购买</button>
  </view>
  <!--选择规格弹窗-->
  <view wx:if="{{showSelect}}" class='select-zone'>
    <view class='select-container'>
      <view>
        <image src="{{goodsInfo.mainImage[0].url}}" class='recommend-image'></image>
        <text class='text-red'>¥{{goodsInfo.goodsPrice}}</text>
      </view>
      <view>规格</view>
      <view>数量</view>
    </view>
  </view>
  <view class='top-btn'>返回顶部</view>
</scroll-view>
