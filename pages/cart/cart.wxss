/* pages/shoppingBag/shoppingBag.wxss */
.m-cart {
  height: 100%;
  position: relative;
}
.h100{
  height: 100%;
}
.ptb100{
  padding: 100rpx 0;
}
radio {
  transform:scale(0.7);
}
.error-c {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.empty {
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto 30rpx;
}
.login-button {
  width: 30%;
  margin: 30rpx auto 0;
}
.reload-button {
  width: 40%;
  margin: 30rpx auto 0;
  background: #fff;
}
.ml10{
  margin-left: 10rpx;
}
.pr10{
  padding-right: 10rpx;
}
.top{
  padding: 20rpx 30rpx;
}
.shop-c {
  padding: 0 20rpx;
}
.shop-icon {
  width: 30rpx;
  height: 30rpx;
}
.goods-c{
  border-radius: 16rpx;
  padding: 20rpx 0 0;
}
.goods-wrap {
  display: flex;
  align-items: center;
}
.goods-right{
  padding: 0 20rpx;
}
.goods-btn{
  display: flex;
}
.goods-btn button {
  width: 150rpx;
  border-radius: 0;
}
.recommend-c {
  margin: 0 20rpx;
  padding: 20rpx 20rpx 100rpx;
}
.recommend-title{
  padding: 20rpx;
}
.recommend-goods-container {
  display: flex;
  flex-wrap: wrap;
}
.recommend-item {
  width: 50%;
  border-radius: 16rpx;
}
.recommend-image {
  width: 200rpx;
  height: 200rpx;
}
.bottom-c{
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  padding-left: 10rpx;
  font-size: small;
}
.bottom-left {
  box-sizing: border-box;
  float: left;
  width: 70%;
  line-height: 100rpx;
  padding-right: 10rpx;
}
.bottom-c .pay{
  width: 30%;
  height: 100rpx;
  border-radius: 0;
}
